<h1 align="center">Create a new Article</h1>
<%= render 'shared/errors', obj: @article %>
<div class = 'row'>
  <div class = 'col-xs-12'>
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = "form-group">
        <div class = "control-label col-sm-2">
        <%= f.label :topic %>
        </div>
        <div class = "col-sm-8">
        <%= f.text_field :topic, class: "form-control",  autofocus: true %>
        </div>
    </div>

     <div class = "form-group">
       <div class = "control-label col-sm-2">

        <%= f.label :description %>
       </div>
       <div class = "col-sm-7">
        <%= f.text_area :description, rows: 10, class: "form-control", autofocus: true %>
       </div>
    </div>
       <div class = "form-group">
        <div class = "control-label col-sm-2">
        <%= f.label :city %>
        </div>
        <div class = "col-sm-4">
        <%= f.text_area :city,rows: 1, class: "form-control"  %>
        </div>
       </div>

      <div class = "form-group">
        <div class = "control-label col-sm-2">
        <%= f.label :country %>
        </div>
        <div class = "col-sm-4">
        <%= f.text_area :country, rows: 1, class: "form-control" %>
        </div>
       </div>


      <div class = "form-group">
        <div class = "col-sm-offset-2 col-sm-2">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
       </div>


      <% end %>
      <%= link_to 'Cancel', articles_path %>
  </div>
</div>