<h1>The  listed articles are</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>Description</th>
    <th>City</th>
    <th>Country</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td><%= article.topic %></td>
    <td><%= article.description %></td>
    <td><%= article.city %></td>
    <td><%= article.country %></td>
    <td><%= link_to 'Show', article_path(article) %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
<div class = 'row'>
  <div class = 'col-md-12'>
<div class = "form-group">
  <div class = "row-sm-offset-1 col-sm-offset-2 col-sm-1">
<%= link_to 'Create Article', new_article_path, class: 'btn btn-primary btn-lg', rows: 1 %>
  </div>
</div>
  </div>
</div>