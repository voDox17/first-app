<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
<p>
  <%= f.label :topic %> <br/>
  <%= f.text_field :topic %>
</p>
<p>
  <%= f.label :description %> <br/>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :city %> <br/>
  <%= f.text_area :city %>
</p>
<p>
  <%= f.label :country %> <br/>
  <%= f.text_area :country %>
</p>
<p>
  <%= f.submit %>
</p>

<% end %>
<%= link_to 'back to articles', articles_path %>